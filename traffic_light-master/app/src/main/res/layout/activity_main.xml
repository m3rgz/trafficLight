<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_primary"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <Button
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/red_text_background"
        android:onClick="OnClickBtnRedBackground"
        android:text="@string/red"
        android:textColor="#4C0E0A"
        android:textSize="@dimen/text_size" />

    <Button
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/yellow_text_background"
        android:onClick="OnClickBtnYellowBackground"
        android:text="@string/yellow"
        android:textColor="#635B14"
        android:textSize="@dimen/text_size" />

    <Button
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:backgroundTint="#2ADC34"
        android:onClick="OnClickBtnGreenBackground"
        android:text="@string/green"
        android:textColor="#0D5A10"
        android:textSize="@dimen/text_size" />


</LinearLayout>